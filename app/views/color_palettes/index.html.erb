<p id="notice"><%= notice %></p>

<h1>Color Palettes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @color_palettes.each do |color_palette| %>
      <tr>
        <td><%= color_palette.name %></td>
        <td><%= color_palette.description %></td>
        <td><%= image_tag(color_palette.picture_url, :width => 100) if color_palette.picture.present? %></td>
        <td><%= link_to 'Show', color_palette %></td>
        <td><%= link_to 'Edit', edit_color_palette_path(color_palette) %></td>
        <td><%= link_to 'Destroy', color_palette, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

